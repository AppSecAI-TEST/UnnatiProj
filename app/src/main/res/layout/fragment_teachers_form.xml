<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/teachers_form"
    android:backgroundTint="@color/white"
    tools:context="com.example.unnatiproj.TeachersForm">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/tid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Teacher Id:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/etid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Name:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone Number:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/etnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10" />

            <TextView
                android:id="@+id/tmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email Id:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/temail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtbranch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select Branch:"
                android:textColor="@color/colorPrimaryDark" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/tbranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_usrname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Username"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/tusrname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/txt_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Password"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/tpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/re_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Re-Enter Password"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/repass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />


            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimaryDark"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
