<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    tools:context="com.example.unnatiproj.EnquiryForm">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Current Date:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/cdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"/>

            <TextView
                android:id="@+id/txt_eqid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enquiry Id:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/eqid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/eqname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Name:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/eq1name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/eq_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone Number:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/txt_eqnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10" />

            <TextView
                android:id="@+id/txt_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email Id:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/eq_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Course:"
                android:textColor="@color/colorPrimaryDark" />

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eqcourse_spn"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:gravity="left"
                android:hint="Enter Course Name"
                app:met_primaryColor="@color/colorPrimary"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txt_source"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Source:"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/eq_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_branch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Branch:"
                android:textColor="@color/colorPrimaryDark" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eqbranch_spn"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:gravity="left"
                android:hint="Select Branch"
                app:met_primaryColor="@color/colorPrimary"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btnsub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimaryDark"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
